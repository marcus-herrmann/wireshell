#!/usr/bin/env php

<?php

use Symfony\Component\Console\Application;
use Wireshell\Commands\NewCommand;
use Wireshell\Commands\CreateUserCommand;
use Wireshell\Commands\CreateRoleCommand;
use Wireshell\Commands\CreateTemplateCommand;
use Wireshell\Commands\ServeCommand;
use Wireshell\Commands\ShowVersionCommand;

require 'vendor/autoload.php';

$app = new Application('WireShell - An extendable ProcessWire CLI', '0.2.1');

$app->add(new NewCommand());
$app->add(new CreateUserCommand());
$app->add(new CreateRoleCommand());
$app->add(new CreateTemplateCommand());
$app->add(new ServeCommand());
$app->add(new ShowVersionCommand());

$app->run();
